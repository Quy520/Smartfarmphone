<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:id="@+id/nc_info_seedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/info_seedback" />

        <TextView
            android:id="@+id/mc_title22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nc_info_seedback"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/msg_control_descr"
            android:textColor="@color/sky_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <View
            android:id="@+id/mc_dividing23"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/mc_title22"
            android:layout_margin="10dp"
            android:background="@color/sky_blue"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_desc_closeall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mc_dividing23"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/close_all_title"
            android:textColor="?titleColor"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_btn_closeall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mc_desc_closeall"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/close_all_btn"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_descr_closeall"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBaseline="@id/mc_btn_closeall"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mc_btn_closeall"
            android:gravity="center_vertical"
            android:text="@string/close_all_descr"
            android:textColor="?textColor"
            android:textSize="16sp"
            android:visibility="visible" />

        <View
            android:id="@+id/mc_dividing26"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mc_btn_closeall"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_desc_openall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mc_dividing26"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/open_all_title"
            android:textSize="18sp"
            android:textColor="?titleColor"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_btn_openall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mc_desc_openall"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/open_all_btn"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_descr_openall"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBaseline="@id/mc_btn_openall"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mc_btn_openall"
            android:gravity="center_vertical"
            android:text="@string/open_all_descr"
            android:textSize="16sp"
            android:textColor="?textColor"
            android:visibility="visible" />

        <View
            android:id="@+id/mc_dividing27"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mc_btn_openall"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_desc_stopall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mc_dividing27"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/stop_all_title"
            android:textColor="?titleColor"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_btn_stopall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mc_desc_stopall"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/stop_all_btn"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_descr_stopall"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBaseline="@id/mc_btn_stopall"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mc_btn_stopall"
            android:gravity="center_vertical"
            android:text="@string/stop_all_descr"
            android:textColor="?textColor"
            android:textSize="16sp"
            android:visibility="visible" />

        <View
            android:id="@+id/mc_dividing28"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mc_btn_stopall"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_desc_mode"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mc_dividing28"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/msg_title_mode"
            android:textSize="18sp"
            android:textColor="?titleColor"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_btn_send_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mc_desc_mode"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/msg_btn_send_setting"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible" />

        <RadioGroup
            android:id="@+id/mc_radio_mode"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignTop="@id/mc_btn_send_mode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mc_btn_send_mode"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RadioButton
                android:id="@+id/mc_radio_btn_auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/mode_auto"
            	android:textColor="?textColor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/mc_radio_btn_manually"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/mode_manually"
            	android:textColor="?textColor"
                android:textSize="16sp" />
        </RadioGroup>

        <View
            android:id="@+id/mc_dividing3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mc_btn_send_mode"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_desc_closeall_rain"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mc_dividing3"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/close_all_window"
            android:textSize="18sp"
            android:textColor="?titleColor"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_btn_closeall_rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mc_desc_closeall_rain"
            android:layout_alignLeft="@id/mc_btn_openall"
            android:layout_marginRight="10dp"
