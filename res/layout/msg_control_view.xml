            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/mc_title_ms"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/mc_setting_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mc_text_ms"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/mc_check_phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/main_phone_mun"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/mc_check_phonenum2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/phone_mun_two"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/mc_check_phonenum3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/phone_mun_three"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/mc_check_max_tem"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/highest_tem"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/mc_check_min_tem"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/lowest_tem"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/mc_check_max_threshold"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/difference_upper_limit"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/mc_check_open_len"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/msg_open_time"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/mc_check_close_len"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/msg_close_time"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/mc_check_open_time"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/msg_morning_open_time"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/mc_check_close_time"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/msg_night_close_time"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/mc_check_vent_time"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/msg_vent_time"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/mc_check_min_threshold"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/difference_upper_limit"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/mc_btn_send_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mc_setting_l1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector"
