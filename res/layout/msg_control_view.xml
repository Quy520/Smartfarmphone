            android:text="@string/close_all_btn_rain"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mc_descr_closeall_rain"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBaseline="@id/mc_btn_closeall_rain"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mc_btn_closeall_rain"
            android:gravity="center_vertical"
            android:text="@string/close_all_descr_rain"
            android:textColor="?textColor"
            android:textSize="16sp"
            android:visibility="visible" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/mc_btn_closeall_rain"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/mc_title_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nc_btn_temp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/receive_msg_title"
            android:textColor="@color/sky_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:id="@+id/mc_dividing2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/mc_title_receive"
            android:layout_margin="10dp"
            android:background="@color/sky_blue"
            android:visibility="gone" />

        <com.smartfarm.widget.InnerScrollView
            android:id="@+id/mc_inner_scroll"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/mc_dividing2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border"
            android:scrollbars="none"
            android:visibility="gone" >

            <TextView
                android:id="@+id/mc_text_receive_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </com.smartfarm.widget.InnerScrollView>

        <TextView
            android:id="@+id/mc_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mc_inner_scroll"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/msg_info_setting"
            android:textColor="@color/sky_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:id="@+id/mc_dividing1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/mc_title1"
            android:layout_margin="10dp"
            android:background="@color/sky_blue"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/mc_check_tem"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mc_dividing1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/check_current_tem"
            android:textSize="18sp"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/mc_check_control_motor"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mc_check_tem"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/control_motor"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mc_desc_type"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mc_check_control_motor"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/select_msg_type"
            android:textSize="18sp"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/mc_radio_type"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mc_desc_type"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:visibility="gone" >

            <RadioButton
                android:id="@+id/mc_radio_btn_open"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/open_window"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/mc_radio_btn_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/close_window"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/mc_radio_btn_stop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/stop"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/mc_desc_cw"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mc_radio_type"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/select_control_window"
            android:textSize="18sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/mc_ll_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/mc_desc_cw"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:visibility="gone" >

            <CheckBox
                android:id="@+id/mc_checkbox_w1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/window_one"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/mc_checkbox_w2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/window_two"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/mc_checkbox_w3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/window_three"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mc_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mc_ll_1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/send_control_msg"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mc_title_cs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mc_btn_send"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/msg_control_setting"
            android:textColor="@color/sky_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:id="@+id/mc_dividing4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mc_radio_mode"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mc_title_ms"
            android:layout_width="match_parent"
            android:layout_height="30dp"
