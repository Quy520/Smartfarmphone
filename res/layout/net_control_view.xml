<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nc_outer"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:id="@+id/nc_info_seedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/info_seedback" />

        <TextView
            android:id="@+id/nc_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nc_info_seedback"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/net_control"
            android:textColor="@color/sky_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mode_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/nc_title2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/mode_tip"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <View
            android:id="@+id/nc_dividing3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/nc_title2"
            android:layout_margin="10dp"
            android:background="@color/sky_blue"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_desc_window_control"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nc_dividing3"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/window_control"
            android:textColor="?titleColor"
            android:textSize="18sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/nc_ll_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/nc_desc_window_control"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:visibility="visible" >

            <CheckBox
                android:id="@+id/nc_checkbox_w1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/window_one"
                android:textColor="?titleColor"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/nc_checkbox_w2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/window_two"
                android:textColor="?titleColor"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/nc_checkbox_w3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/window_three"
                android:textColor="?titleColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nc_ll_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nc_ll_1"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:visibility="visible" >

            <CheckBox
                android:id="@+id/nc_checkbox_w4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/window_four"
                android:textColor="?titleColor"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/nc_checkbox_w5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/window_five"
                android:textColor="?titleColor"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/nc_checkbox_w6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/window_six"
                android:textColor="?titleColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nc_ll_check2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nc_ll_check"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:visibility="visible" >

            <CheckBox
                android:id="@+id/nc_checkbox_w7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/window_seven"
                android:textColor="?titleColor"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/nc_checkbox_w8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/window_eight"
                android:textColor="?titleColor"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/nc_checkbox_w9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/window_nine"
                android:textColor="?titleColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nc_ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nc_ll_check2"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/nc_btn_open_window"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/open_btn_selector"
                    android:clickable="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/nc_btn_stop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/stop_btn_selector"
                    android:clickable="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/nc_btn_close_window"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/close_btn_selector"
                    android:clickable="true" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/nc_dividing5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nc_ll_2"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_desc_closeall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nc_dividing5"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/close_all_window"
            android:textColor="?titleColor"
            android:textSize="18sp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/nc_mode_rl1"
            style="@style/option_item_rl"
            android:layout_below="@id/nc_desc_closeall"
            android:layout_marginLeft="20dp"
            android:background="@color/transparent" >

            <TextView
                android:id="@+id/nc_btn_closeall"
                style="@style/option_item_text_parent"
                android:layout_toLeftOf="@+id/nc_descr_closeall"
                android:text="@string/close_all_window_descr"
                android:textColor="?textColor" />

              <!-- <com.smartfarm.widget.togglebutton.ToggleButton
                android:id="@+id/nc_descr_closeall"
                style="@style/option_item_toggleButton"
                android:layout_alignParentRight="true" /> -->
            
           <TextView
            android:id="@+id/nc_descr_closeall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/close_all_window"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible" /> 
        </RelativeLayout>

        <View
            android:id="@+id/nc_dividing15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nc_mode_rl1"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="visible" />
        

        <TextView
            android:id="@+id/nc_desc_ventilation"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nc_dividing15"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/ventilation"
            android:textColor="?titleColor"
            android:textSize="18sp"
            android:visibility="visible" />
        
        
        <RelativeLayout
            android:id="@+id/nc_mode_rl2"
            style="@style/option_item_rl"
            android:layout_below="@id/nc_desc_ventilation"
            android:layout_marginLeft="20dp"
            android:background="@color/transparent" >

            <TextView
                android:id="@+id/nc_btn_ventilation"
                style="@style/option_item_text_parent"
                android:layout_toLeftOf="@+id/nc_text_ventilation"
                android:text="@string/ventilation_descr"
                android:textColor="?textColor" />

            <!-- <com.smartfarm.widget.togglebutton.ToggleButton
                android:id="@+id/nc_text_ventilation"
                style="@style/option_item_toggleButton"
                android:layout_alignParentRight="true" /> -->

            <TextView
                android:id="@+id/nc_text_ventilation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/ventilation"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:visibility="visible" />

        </RelativeLayout>
       

        <!-- <TextView
            android:id="@+id/nc_btn_ventilation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/nc_desc_ventilation"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="@string/ventilation_btn"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/nc_text_ventilation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/nc_text_link"
            android:layout_alignTop="@id/nc_btn_ventilation"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="@string/ventilation_descr"
            android:textColor="?textColor"
            android:textSize="16sp"
            android:visibility="visible" /> -->

        <View
            android:id="@+id/nc_dividing1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nc_mode_rl2"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_desc_control_way"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nc_dividing1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/control_way"
            android:textColor="?titleColor"
            android:textSize="18sp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/nc_mode_rl"
            style="@style/option_item_rl"
            android:layout_below="@id/nc_desc_control_way"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/transparent" >

            <TextView
                android:id="@+id/nc_text_control_way"
                style="@style/option_item_text_parent"
                android:text="@string/mode_auto"
                android:textColor="?textColor" />

            <com.smartfarm.widget.togglebutton.ToggleButton
                android:id="@+id/nc_btn_switch"
                style="@style/option_item_toggleButton"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:id="@+id/nc_dividing2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nc_mode_rl"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="visible" />
        
        <!-- 高温转自动开始 -->

        <TextView
            android:id="@+id/nc_desc_control_auto_enable"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nc_dividing2"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/auto_open_enable"
            android:textColor="?titleColor"
            android:textSize="18sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/nc_mode_auto_enable"
            style="@style/option_item_rl"
            android:layout_below="@id/nc_desc_control_auto_enable"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:background="@color/transparent" >

            <TextView
                android:id="@+id/nc_text_control_auto_enable"
                style="@style/option_item_text_parent"
                android:text="@string/mode_high_auto"
                android:textColor="?textColor" />

            <com.smartfarm.widget.togglebutton.ToggleButton
                android:id="@+id/nc_btn_auto_enable"
                style="@style/option_item_toggleButton"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:id="@+id/nc_dividing16"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nc_mode_auto_enable"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="gone" />
        <!-- /高温转自动结束 -->
        

        <TextView
            android:id="@+id/nc_desc_diagnosis"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nc_dividing16"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/net_diagnosis"
            android:textColor="?titleColor"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_btn_diagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/nc_desc_diagnosis"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/btn_diagnosis"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_text_diagnosis"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBaseline="@id/nc_btn_diagnosis"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/nc_btn_diagnosis"
            android:gravity="center_vertical"
            android:text="@string/net_diagnosis_descr"
            android:textColor="?textColor"
            android:textSize="16sp"
            android:visibility="visible" />

        <View
            android:id="@+id/nc_dividing6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nc_btn_diagnosis"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_desc_link"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nc_dividing6"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/pad_link_state"
            android:textColor="?titleColor"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_btn_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/nc_desc_link"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/re_link"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_text_link"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBaseline="@id/nc_btn_link"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/nc_btn_link"
            android:gravity="center_vertical"
            android:text="@string/link_state"
            android:textColor="?textColor"
            android:textSize="16sp"
            android:visibility="visible" />

        <View
            android:id="@+id/nc_dividing26"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nc_btn_link"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_desc_syn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nc_dividing26"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/modify_setting"
            android:textColor="?titleColor"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_btn_syn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/nc_desc_syn"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/modify_setting_btn"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nc_text_syn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/nc_btn_syn"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/nc_btn_syn"
            android:gravity="center_vertical"
            android:text="@string/modify_setting_descr"
            android:textColor="?textColor"
            android:textSize="16sp"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/nc_mode_rl2"
            android:visibility="visible" />

        <View
            android:id="@+id/nc_dividing9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nc_mode_rl2"
            android:layout_margin="10dp"
            android:background="@color/grey"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nc_desc_receive_msg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/nc_title2"
            android:layout_below="@+id/nc_dividing9"
            android:gravity="center_vertical"
            android:text="@string/receive_msg"
            android:textSize="18sp"
            android:visibility="gone" />

        <com.smartfarm.widget.InnerScrollView
            android:id="@+id/nc_inner_scroll"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/nc_desc_receive_msg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border"
            android:scrollbars="none"
            android:visibility="gone" >

            <TextView
                android:id="@+id/nc_text_receive_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </com.smartfarm.widget.InnerScrollView>

        <TextView
            android:id="@+id/nc_btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/nc_inner_scroll"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/clear_msg"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

</ScrollView>