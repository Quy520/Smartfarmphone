<?xml version="1.0" encoding="utf-8"?>
<com.smartfarm.widget.CustomerScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/mn_btn_submit"
            style="@style/option_item_rl"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/mn_submit"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color" />
        
        <RelativeLayout
            android:id="@+id/mn_btn_comment"
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/mn_comment"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/mn_btn_read"
            style="@style/option_item_rl"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/mn_read"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
      
    </LinearLayout>

</com.smartfarm.widget.CustomerScrollView>