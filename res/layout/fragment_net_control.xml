<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nc_outer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="vertical">
    
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            layout="@layout/fragment_control_temp" />
        
        <RelativeLayout
	        style="@style/option_item_rl"
			android:layout_marginTop="20dp">
	
	        <TextView
	            style="@style/option_item_text_parent"
	            android:text="@string/window_control"
	            android:textColor="@color/main_black"
	            android:textSize="@dimen/text_size_16" />
	    </RelativeLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_marginLeft="@dimen/space_8"
	        android:layout_marginRight="@dimen/space_8"
	        android:background="@color/list_divider_color" />
        
	    <LinearLayout
            android:id="@+id/nc_ll_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:visibility="visible" >

            <CheckBox
                android:id="@+id/nc_checkbox_w1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/window_one"
                android:checked="true"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/nc_checkbox_w2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/window_two"
                android:checked="true"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/nc_checkbox_w3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:checked="true"
                android:text="@string/window_three"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nc_ll_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:visibility="visible" >

            <CheckBox
                android:id="@+id/nc_checkbox_w4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:checked="true"
                android:text="@string/window_four"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/nc_checkbox_w5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:checked="true"
                android:text="@string/window_five"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/nc_checkbox_w6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/window_six"
                android:checked="true"
                android:textSize="16sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/nc_ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/nc_btn_open_window"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/open_btn_selector"
                    android:clickable="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/nc_btn_stop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/stop_btn_selector"
                    android:clickable="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/nc_btn_close_window"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/close_btn_selector"
                    android:clickable="true" />
            </RelativeLayout>
        </LinearLayout>
        
        <RelativeLayout
	        style="@style/option_item_rl"
			android:layout_marginTop="20dp"
			android:orientation="vertical">
            
			<TextView
	            android:id="@+id/nc_text_link"
	            style="@style/option_item_text_parent"
	            android:text="@string/link_state"
	            android:textColor="@color/grey"
	            android:textSize="14sp"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
				android:layout_marginTop="10dp"
				android:layout_alignParentRight="true"/>
	
	        <TextView
	            style="@style/option_item_text_parent"
	            android:layout_width="match_parent"
	            android:text="@string/pad_link_state"
	            android:textColor="@color/main_black"
	            android:textSize="16sp"
				android:layout_toLeftOf="@id/nc_text_link"
				android:layout_alignBaseline="@id/nc_text_link"/>
	        
	    </RelativeLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_marginLeft="@dimen/space_8"
	        android:layout_marginRight="@dimen/space_8"
	        android:background="@color/list_divider_color" />
	    
	     <LinearLayout
	        style="@style/option_item_rl"
			android:orientation="vertical">
            
	        <TextView
	            style="@style/option_item_text_parent"
	            android:layout_width="match_parent"
	            android:text="@string/close_all_window"
	            android:textColor="@color/main_black"
	            android:textSize="16sp"/>
	        
			<TextView
	            style="@style/option_item_text_parent"
	            android:layout_width="match_parent"
	            android:text="@string/close_all_window_descr"
	            android:textColor="@color/grey"
	            android:textSize="14sp"
	            android:paddingLeft="20dp"
				android:layout_marginTop="10dp"/>
	    </LinearLayout>
	     
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_marginLeft="@dimen/space_8"
	        android:layout_marginRight="@dimen/space_8"
	        android:background="@color/list_divider_color" />

        <RelativeLayout
	        style="@style/option_item_rl">
            
			<TextView
	            android:id="@+id/nc_text_diagnosis"
	            style="@style/option_item_text_parent"
	            android:text="@string/net_diagnosis_descr"
	            android:textColor="@color/grey"
	            android:textSize="14sp"
	            android:paddingRight="10dp"
				android:layout_marginTop="10dp"
				android:layout_alignParentRight="true"/>
	
	        <TextView
	            style="@style/option_item_text_parent"
	            android:layout_width="match_parent"
	            android:text="@string/net_diagnosis"
	            android:textColor="@color/main_black"
	            android:textSize="16sp"
				android:layout_toLeftOf="@id/nc_text_diagnosis"
				android:layout_alignBaseline="@id/nc_text_diagnosis"/>
	        
	    </RelativeLayout>
	     
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_marginLeft="@dimen/space_8"
	        android:layout_marginRight="@dimen/space_8"
	        android:background="@color/list_divider_color" />
	    
	    <RelativeLayout
            android:id="@+id/nc_mode_rl"
            style="@style/option_item_rl">

			<TextView
			    android:id="@+id/nc_title_control_way"
                style="@style/option_item_text_parent"
            	android:textColor="@color/main_black"
            	android:text="@string/control_way"/>
			
			<TextView
                style="@style/option_item_text_parent"
                android:layout_toRightOf="@id/nc_title_control_way"
            	android:id="@+id/nc_text_control_way"
            	android:textColor="@color/grey"
            	android:text="@string/mode_auto"
            	android:textSize="14sp"
            	android:layout_marginLeft="10dp"/>
			
            <com.smartfarm.widget.togglebutton.ToggleButton
	            android:id="@+id/nc_btn_switch"
	            style="@style/option_item_toggleButton"
	            android:layout_alignParentRight="true"/>
            
        </RelativeLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_marginLeft="@dimen/space_8"
	        android:layout_marginRight="@dimen/space_8"
	        android:background="@color/list_divider_color" />
	    
	     <LinearLayout
	        style="@style/option_item_rl"
			android:orientation="vertical">
            
	        <TextView
	            style="@style/option_item_text_parent"
	            android:layout_width="match_parent"
	            android:text="@string/modify_setting"
	            android:textColor="@color/main_black"
	            android:textSize="16sp"/>
	        
			<TextView
	            style="@style/option_item_text_parent"
	            android:layout_width="match_parent"
	            android:text="@string/modify_setting_descr"
	            android:textColor="@color/grey"
	            android:textSize="14sp"
	            android:paddingLeft="20dp"
				android:layout_marginTop="10dp"/>
	    </LinearLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_marginLeft="@dimen/space_8"
	        android:layout_marginRight="@dimen/space_8"
	        android:background="@color/list_divider_color" />
	    
	     <LinearLayout
	        style="@style/option_item_rl"
			android:orientation="vertical">
            
	        <TextView
	            style="@style/option_item_text_parent"
	            android:layout_width="match_parent"
	            android:text="@string/ventilation"
	            android:textColor="@color/main_black"
	            android:textSize="16sp"/>
	        
			<TextView
	            style="@style/option_item_text_parent"
	            android:layout_width="match_parent"
	            android:text="@string/ventilation_descr"
	            android:textColor="@color/grey"
	            android:textSize="14sp"
	            android:paddingLeft="20dp"
				android:layout_marginTop="10dp"/>
	    </LinearLayout>
	</LinearLayout>
</ScrollView>
