<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/uc_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/user_center_bg_default"
        android:contentDescription="@string/hello_world" />

    <com.smartfarm.widget.AvatarView
        android:id="@+id/uc_face"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/uc_bg"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-30dp"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/default_user_face" />

    <TextView 
        android:id="@+id/uc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/uc_bg"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/uc_bg"/>
</RelativeLayout>